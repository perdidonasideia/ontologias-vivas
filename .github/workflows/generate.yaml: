name: Gerar Temas Ontológicos

on:
  workflow_dispatch:
  schedule:
    - cron: "0 12 * * *"   # roda todo dia às 12h (opcional)

jobs:
  gerar:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Instalar dependências
        run: |
          pip install gspread google-auth

      - name: Rodar gerador e enviar ao Google Sheets
        env:
          GOOGLE_SHEETS_CREDENTIALS: ${{ secrets.GOOGLE_SHEETS_CREDENTIALS }}
          SHEET_ID: ${{ secrets.SHEET_ID }}
        run: |
          echo "$GOOGLE_SHEETS_CREDENTIALS" > service_account.json
          python gerador.py
